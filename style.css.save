body x{
  font-family: Cambria, Cochin, Georgia, Times, "Times New Roman", serif;
  margin: 0;
  padding: 0;
  line-height: 30px;
  letter-spacing: 1px;
  background-color: rgb(17, 154, 140);
}
#contenu {
  background-image: url("./img/cool-background.png");
  width: 1080px;
  margin-left: auto;
  margin-right: auto;
  margin-top: 50px;
}
ul {
  margin: 0;
  padding: 0;
}

h1 {
  font-size: 50px;
  text-align: center;
  color: brown;
  text-shadow: 4px 4px 5px rgb(250, 244, 244);
}
main {
  padding-left: 30px;
  padding-bottom: 30px;
  padding-top: 30px;
}

h2 {
  color: brown;
}

h3 {
  background-color: brown;
  text-align: center;
  color: rgb(244, 237, 237);
  padding: 0;
  margin: 0;
}
h3 a {
  text-decoration: none;
  color: bisque;
}
h3 a:hover {
  color: black;
}
nav {
  text-align: center;
}
#description {
  padding-left: 30px;
  font-size: 15px;
  text-align: left;
  color: rgb(3, 3, 3);
  text-decoration: none;
}

#up {
  border: 2px solid rgb(17, 17, 17);
  background-color: brown;
}

#menu li {
  display: inline-block;
  text-align: center;
}
#menu li a {
  margin: 50px;
  color: bisque;
  text-decoration: none;
}
#menu li a:hover {
  color: black;
}
#ensemble {
  position: relative;
  display: inline-block;
  padding-left: 30px;
  padding-right: 30px;
  margin: 0;
}

#sidebar {
  position: absolute;
  right: 30px;
  top: 30px;
  background-color: rgb(245, 193, 141);
  width: 350px;
  float: right;
  text-align: center;
  text-shadow: 4px 4px 4px rgb(244, 237, 237);
}

img {
  margin: auto;
  display: flex;
}

article {
  position: relative;
  float: left;
  width: 600px;
  padding-bottom: 30px;
  background-color: rgb(245, 193, 141);
  margin-top: 30px;
  margin-bottom: 30px;
  word-break: normal;
  text-align: justify;
}
article p {
  padding-right: 30px;
  padding-left: 30px;
}

footer {
  font-size: 10px;
  text-align: center;
  color: rgb(247, 249, 250);
}
